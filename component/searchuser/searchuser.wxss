/* pages/searchuser/searchuser.wxss */

input{
  border-bottom: 2px solid #888;
  height: 30px;
  transition: cubic-bezier(0.075, 0.82, 0.165, 1);
}

input:focus{
  border-bottom: 2px solid #000;
}

.searchuser{
  position: fixed;
  top:0px;
  left:0px;
  width: 100%;
  height: 100%;
  z-index: 9999;
  background: rgba(255,255,255,0.8);
  border: 1px solid rgba(0,0,0,0.08);
}

.search-user-inner{
  margin-top: 50%;
  width: 80%;
  height: auto;
  padding: 60rpx;
  margin-left: auto;
  margin-right: auto;
  background: #fafafa;
  box-shadow: 0 3px 6px rgba(0,0,0,0.06), 0 4px 8px rgba(0,0,0,0.13);
  border-radius: 4px;
}

.search-title{
  font-size: 20px;
  font-weight: bold;
}

.search-input-hint{
  opacity: .4;
  margin-bottom: 10rpx;
}

.search-input{
  margin-top: 30rpx;
}

.search-btn{
  position: relative;
  margin-top: 200rpx;
}

.search-res-title{
  font-size: 14px;
  opacity: .5;
}

.search-res-single{
  width: 100%;
  height: 50px;
  background: rgba(0,0,0,0.05);
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  border-top: 1px solid rgba(0,0,0,0.1);
  border-bottom: 1px solid rgba(0,0,0,0.1);
}

.search-res-text{
  margin-left: 20rpx;
  margin-top: 20rpx;
  font-size: 18px;
  font-weight: bold;
  opacity: .8;
}

.search-close-img{
  width: 80rpx;
  height: 80rpx;
}

.search-close-inner{
  width: 80rpx;
  margin-top: 100rpx;
  margin-left: auto;
  margin-right: auto;
}