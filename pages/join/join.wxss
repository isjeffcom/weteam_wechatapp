/* pages/join/join.wxss */

button{
  background: #1DDB8B;
}

button:active{
  background: #1ACD82;
}

.invi{
  width: 100%;
  margin-top: 30px;
}

.invi-inner{
  text-align: center;
}

.invi-ivtor{
  width: 100%;
}

.invi-ivtor-img{
  width: 50px;
  height: 50px;
  border-radius: 100px;
  overflow: hidden;
  margin-left: auto;
  margin-right: auto;
}

.invi-ivtor-img-img{
  width: 50px;
  height: 50px;
}

.invi-ivtor-name{
  text-transform: uppercase;
  font-size: 18px;
  margin-top: 10px;
  font-weight: bold;
}

.invi-group{
  margin-top: 80px;
}

.invi-group-icon{
  margin-bottom: 20px;
}

.invi-group-icon-img{
  width: 60px;
  height: 60px;
}

.invi-group-name{
  font-size: 22px;
  font-weight: bold;
}

.invi-group-line{
  width: 65%;
  opacity: 0.5;
  margin-left: auto;
  margin-right: auto;
  margin-top: 6px;
}

.invi-join{
  position: absolute;
  width: 100%;
  bottom: 60px;
}




